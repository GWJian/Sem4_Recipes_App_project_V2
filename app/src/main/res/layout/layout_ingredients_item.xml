<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcIngredientsCV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#3CF1EBF1"
        app:cardCornerRadius="18dp"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageView
                android:id="@+id/ivIngredients"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_image" />

            <TextView
                android:id="@+id/tvIngredientsName"
                style="@style/TextAppearance.Material3.BodyLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Ingredient Name" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvIngredientMeasure"
            style="@style/ShapeAppearance.Material3.Corner.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_marginEnd="10dp"
            android:text="Measure" />

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>